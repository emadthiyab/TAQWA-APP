<!-- الشريط العلوي -->
<nav class="navbar navbar-luxury">
    <div class="navbar-content">
        <div class="navbar-left">
            <button class="mobile-menu-btn d-lg-none">
                <i class="fas fa-bars"></i>
            </button>
            <h5 class="mb-0">
                <%= title %>
            </h5>
        </div>
        <div class="navbar-right">
            <div class="language-menu">
                <a href="?lang=<%= lang === 'ar' ? 'en' : 'ar' %>" class="btn btn-lang">
                    <i class="fas fa-globe me-2"></i>
                    <%= lang==='ar' ? 'English' : 'العربية' %>
                </a>
            </div>
            <div class="user-menu">
                <div class="dropdown">
                    <button class="btn btn-outline-luxury dropdown-toggle" type="button" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <i class="fas fa-user me-2"></i>
                        <span class="d-none d-sm-inline">
                            <%= user.name %>
                        </span>
                    </button>
                    <ul class="dropdown-menu <%= isRTL ? 'dropdown-menu-end' : 'dropdown-menu-end' %>">
                        <li>
                            <span class="dropdown-item-text">
                                <small class="text-muted d-block">
                                    <%= t.userRole %>:
                                </small>
                                <strong class="d-block">
                                    <%= user.role %>
                                </strong>
                                <small class="text-muted d-block mt-1">
                                    <%= t.department %>:
                                </small>
                                <strong class="d-block">
                                    <%= user.department %>
                                </strong>
                            </span>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <a class="dropdown-item"
                                href="<%= user.interface === 'admin' ? '/admin/dashboard' : '/user/dashboard' %>?lang=<%= lang %>">
                                <i class="fas fa-tachometer-alt me-2"></i>
                                <%= t.dashboard %>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="/user/profile?lang=<%= lang %>">
                                <i class="fas fa-user-cog me-2"></i>
                                <%= t.profile %>
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <form action="/logout" method="POST" class="dropdown-item p-0">
                                <input type="hidden" name="lang" value="<%= lang %>">
                                <button type="submit" class="dropdown-item-btn text-danger w-100">
                                    <i class="fas fa-sign-out-alt me-2"></i>
                                    <%= t.logout %>
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</nav>