<!DOCTYPE html>
<html lang="<%= lang %>" dir="<%= dir %>">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= t.myPerformance %> - <%= t.hotelName %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700&display=swap" rel="stylesheet">
    <%- include('../partials/styles') %>
</head>

<body class="dashboard-bg">
    <!-- زر القائمة للموبايل -->
    <button class="mobile-menu-btn" id="mobileMenuBtn">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Overlay للجوال -->
    <div class="overlay" id="overlay"></div>

    <!-- الشريط الجانبي -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-logo">
                <img src="/images/logo.png" alt="<%= t.hotelName %>">
            </div>
            <h5 class="text-gold mb-1">
                <%= t.hotelName %>
            </h5>
            <small class="text-light">
                <%= t.userDashboard %>
            </small>
        </div>

        <nav class="nav flex-column">
            <a href="/user/dashboard?lang=<%= lang %>" class="nav-link">
                <span class="nav-icon"><i class="fas fa-tachometer-alt"></i></span>
                <%= t.dashboard %>
            </a>
            <a href="/user/performance?lang=<%= lang %>" class="nav-link active">
                <span class="nav-icon"><i class="fas fa-chart-bar"></i></span>
                <%= t.myPerformance %>
            </a>
            <!-- باقي الروابط -->
        </nav>

        <div class="mt-auto p-3 border-top">
            <form action="/logout" method="POST" class="d-grid">
                <input type="hidden" name="lang" value="<%= lang %>">
                <button type="submit" class="btn btn-outline-luxury">
                    <i class="fas fa-sign-out-alt me-2"></i>
                    <%= t.logout %>
                </button>
            </form>
        </div>
    </div>

    <!-- المحتوى الرئيسي -->
    <div class="dashboard-content">
        <nav class="navbar navbar-luxury">
            <div class="navbar-content">
                <div class="navbar-left">
                    <h4 class="mb-0 text-dark">
                        <i class="fas fa-chart-bar text-gold me-2"></i>
                        <%= t.myPerformance %>
                    </h4>
                </div>

                <div class="navbar-right">
                    <div class="language-menu">
                        <a href="?lang=<%= lang === 'ar' ? 'en' : 'ar' %>" class="btn btn-lang">
                            <i class="fas fa-globe me-2"></i>
                            <%= lang==='ar' ? 'English' : 'العربية' %>
                        </a>
                    </div>
                </div>
            </div>
        </nav>

        <div class="content-wrapper">
            <div class="dashboard-header mb-4">
                <h1 class="welcome-message">
                    <i class="fas fa-chart-bar text-gold me-2"></i>
                    <%= t.myPerformance %>
                </h1>
                <p class="sub-message">
                    <%= lang==='ar' ? 'تقارير أدائك الشامل وتقييماتك'
                        : 'Your comprehensive performance reports and evaluations' %>
                </p>
            </div>

            <!-- إحصائيات الأداء -->
            <div class="row mb-4">
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="luxury-card text-center">
                        <div class="p-3">
                            <i class="fas fa-calendar-check fa-2x text-gold mb-2"></i>
                            <h3 class="mb-0">
                                <%= performanceData.attendance %>%
                            </h3>
                            <p class="text-muted mb-0">
                                <%= lang==='ar' ? 'نسبة الحضور' : 'Attendance' %>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="luxury-card text-center">
                        <div class="p-3">
                            <i class="fas fa-tasks fa-2x text-gold mb-2"></i>
                            <h3 class="mb-0">
                                <%= performanceData.taskCompletion %>%
                            </h3>
                            <p class="text-muted mb-0">
                                <%= lang==='ar' ? 'إنجاز المهام' : 'Task Completion' %>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="luxury-card text-center">
                        <div class="p-3">
                            <i class="fas fa-star fa-2x text-gold mb-2"></i>
                            <h3 class="mb-0">
                                <%= performanceData.workQuality %>%
                            </h3>
                            <p class="text-muted mb-0">
                                <%= lang==='ar' ? 'جودة العمل' : 'Work Quality' %>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="luxury-card text-center">
                        <div class="p-3">
                            <i class="fas fa-users fa-2x text-gold mb-2"></i>
                            <h3 class="mb-0">
                                <%= performanceData.collaboration %>%
                            </h3>
                            <p class="text-muted mb-0">
                                <%= lang==='ar' ? 'التعاون' : 'Collaboration' %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ملخص الأداء -->
            <div class="row mb-4">
                <div class="col-md-6 mb-3">
                    <div class="luxury-card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-chart-pie text-gold me-2"></i>
                                <%= lang==='ar' ? 'ملخص الأداء' : 'Performance Summary' %>
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-2">
                                    <span>
                                        <%= lang==='ar' ? 'التقييم العام' : 'Overall Rating' %>
                                    </span>
                                    <strong class="text-gold">
                                        <%= performanceData.rating %>/5.0
                                    </strong>
                                </div>
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar bg-gold"
                                        style="width: <%= (performanceData.rating / 5) * 100 %>%"></div>
                                </div>
                            </div>
                            <div class="row text-center mt-4">
                                <div class="col-6 border-end">
                                    <h4 class="text-gold mb-0">
                                        <%= performanceData.totalProjects %>
                                    </h4>
                                    <small class="text-muted">
                                        <%= lang==='ar' ? 'إجمالي المشاريع' : 'Total Projects' %>
                                    </small>
                                </div>
                                <div class="col-6">
                                    <h4 class="text-gold mb-0">
                                        <%= performanceData.completedProjects %>
                                    </h4>
                                    <small class="text-muted">
                                        <%= lang==='ar' ? 'المشاريع المكتملة' : 'Completed' %>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="luxury-card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-bullseye text-gold me-2"></i>
                                <%= lang==='ar' ? 'مؤشرات الأداء' : 'KPIs' %>
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-6 border-end mb-3">
                                    <h4 class="text-gold mb-0">
                                        <%= performanceData.totalKPIs %>
                                    </h4>
                                    <small class="text-muted">
                                        <%= lang==='ar' ? 'إجمالي المؤشرات' : 'Total KPIs' %>
                                    </small>
                                </div>
                                <div class="col-6 mb-3">
                                    <h4 class="text-gold mb-0">
                                        <%= performanceData.activeProjects %>
                                    </h4>
                                    <small class="text-muted">
                                        <%= lang==='ar' ? 'المشاريع النشطة' : 'Active Projects' %>
                                    </small>
                                </div>
                            </div>
                            <div class="alert alert-info mb-0">
                                <i class="fas fa-info-circle me-2"></i>
                                <%= lang==='ar' ? 'أدائك ممتاز! استمر في العمل الجيد'
                                    : 'Your performance is excellent! Keep up the good work' %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- مؤشرات الأداء الأخيرة -->
            <div class="row mb-4">
                <div class="col-md-6 mb-3">
                    <div class="luxury-card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-chart-line text-gold me-2"></i>
                                <%= lang==='ar' ? 'مؤشرات الأداء الأخيرة' : 'Recent KPIs' %>
                            </h5>
                        </div>
                        <div class="card-body">
                            <% if (userKPIs && userKPIs.length> 0) { %>
                                <div class="list-group list-group-flush">
                                    <% userKPIs.forEach(kpi=> { %>
                                        <div class="list-group-item">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <strong>
                                                    <%= kpi.name %>
                                                </strong>
                                                <span class="badge bg-gold">
                                                    <%= kpi.progress || 0 %>%
                                                </span>
                                            </div>
                                            <div class="progress" style="height: 6px;">
                                                <div class="progress-bar bg-gold"
                                                    style="width: <%= kpi.progress || 0 %>%"></div>
                                            </div>
                                        </div>
                                        <% }); %>
                                </div>
                                <% } else { %>
                                    <p class="text-muted text-center mb-0">
                                        <%= lang==='ar' ? 'لا توجد مؤشرات أداء حالياً' : 'No KPIs available' %>
                                    </p>
                                    <% } %>
                        </div>
                    </div>
                </div>

                <!-- المشاريع الأخيرة -->
                <div class="col-md-6 mb-3">
                    <div class="luxury-card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-project-diagram text-gold me-2"></i>
                                <%= lang==='ar' ? 'المشاريع الأخيرة' : 'Recent Projects' %>
                            </h5>
                        </div>
                        <div class="card-body">
                            <% if (userProjects && userProjects.length> 0) { %>
                                <div class="list-group list-group-flush">
                                    <% userProjects.forEach(project=> { %>
                                        <div class="list-group-item">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <strong>
                                                        <%= project.name %>
                                                    </strong>
                                                    <br>
                                                    <small class="text-muted">
                                                        <% if (project.status==='completed' ) { %>
                                                            <span class="badge bg-success">
                                                                <%= lang==='ar' ? 'مكتمل' : 'Completed' %>
                                                            </span>
                                                            <% } else if (project.status==='active' ) { %>
                                                                <span class="badge bg-primary">
                                                                    <%= lang==='ar' ? 'نشط' : 'Active' %>
                                                                </span>
                                                                <% } else { %>
                                                                    <span class="badge bg-secondary">
                                                                        <%= lang==='ar' ? 'معلق' : 'Pending' %>
                                                                    </span>
                                                                    <% } %>
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                        <% }); %>
                                </div>
                                <% } else { %>
                                    <p class="text-muted text-center mb-0">
                                        <%= lang==='ar' ? 'لا توجد مشاريع حالياً' : 'No projects available' %>
                                    </p>
                                    <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // كود تبديل القائمة الجانبية
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('overlay');

        function toggleSidebar() {
            sidebar.classList.toggle('show');
            overlay.classList.toggle('show');
        }

        mobileMenuBtn.addEventListener('click', toggleSidebar);
        overlay.addEventListener('click', toggleSidebar);
    </script>
</body>

</html>