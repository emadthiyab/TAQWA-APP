<!DOCTYPE html>
<html lang="<%= lang %>" dir="<%= dir %>">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= t.projectsTracking %> - <%= t.hotelName %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700&display=swap" rel="stylesheet">
    <%- include('../partials/styles') %>
</head>

<body class="dashboard-bg">
    <!-- زر القائمة للموبايل -->
    <button class="mobile-menu-btn" id="mobileMenuBtn">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Overlay للجوال -->
    <div class="overlay" id="overlay"></div>

    <!-- الشريط الجانبي -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-logo">
                <img src="/images/logo.png" alt="<%= t.hotelName %>"
                    onerror="this.src='data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iODAiIGhlaWdodD0iODAiIHZpZXdCb3g9IjAgMCA4MCA4MCIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHJlY3Qgd2lkdGg9IjgwIiBoZWlnaHQ9IjgwIiByeD0iNDAiIGZpbGw9IiNEMEFGMzciLz4KPC9zdmc+Cg=='">
            </div>
            <h5 class="text-gold mb-1">
                <%= t.hotelName %>
            </h5>
            <small class="text-light">
                <%= t.userDashboard %>
            </small>
        </div>

        <nav class="nav flex-column">
            <a href="/user/dashboard?lang=<%= lang %>" class="nav-link">
                <span class="nav-icon"><i class="fas fa-tachometer-alt"></i></span>
                <%= t.dashboard %>
            </a>
            <a href="/user/kpis?lang=<%= lang %>" class="nav-link">
                <span class="nav-icon"><i class="fas fa-chart-line"></i></span>
                <%= t.myKPIs %>
            </a>
            <a href="/user/projects?lang=<%= lang %>" class="nav-link active">
                <span class="nav-icon"><i class="fas fa-tasks"></i></span>
                <%= t.projectsTracking %>
            </a>
            <a href="/user/reports?lang=<%= lang %>" class="nav-link">
                <span class="nav-icon"><i class="fas fa-flag"></i></span>
                <%= t.reportsTracking %>
            </a>
            <a href="/user/profile?lang=<%= lang %>" class="nav-link">
                <span class="nav-icon"><i class="fas fa-user"></i></span>
                <%= t.profile %>
            </a>
        </nav>

        <div class="mt-auto p-3 border-top">
            <form action="/logout" method="POST" class="d-grid">
                <input type="hidden" name="lang" value="<%= lang %>">
                <button type="submit" class="btn btn-outline-luxury">
                    <i class="fas fa-sign-out-alt me-2"></i>
                    <%= t.logout %>
                </button>
            </form>
        </div>
    </div>

    <!-- المحتوى الرئيسي -->
    <div class="dashboard-content">
        <nav class="navbar navbar-luxury">
            <div class="navbar-content">
                <div class="navbar-left">
                    <h4 class="mb-0 text-dark">
                        <i class="fas fa-tasks text-gold me-2"></i>
                        <%= t.projectsTracking %>
                    </h4>
                </div>

                <div class="navbar-right">
                    <div class="language-menu">
                        <a href="?lang=<%= lang === 'ar' ? 'en' : 'ar' %>" class="btn btn-lang">
                            <i class="fas fa-globe me-2"></i>
                            <%= lang==='ar' ? 'English' : 'العربية' %>
                        </a>
                    </div>
                </div>
            </div>
        </nav>

        <div class="content-wrapper">
            <div class="dashboard-header mb-4">
                <h1 class="welcome-message">
                    <i class="fas fa-tasks text-gold me-2"></i>
                    <%= t.projectsTracking %>
                </h1>
                <p class="sub-message">
                    <%= lang==='ar' ? 'متابعة المشاريع المكلف بها وحالة إنجازها'
                        : 'Track assigned projects and their completion status' %>
                </p>
            </div>

            <!-- بطاقات الإحصائيات -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="stat-card">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h3 class="stat-number">
                                    <%= userProjects ? userProjects.length : 0 %>
                                </h3>
                                <p class="text-muted mb-0">
                                    <%= lang==='ar' ? 'إجمالي المشاريع' : 'Total Projects' %>
                                </p>
                            </div>
                            <div class="stat-icon">
                                <i class="fas fa-tasks"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="stat-card">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h3 class="stat-number">
                                    <%= userProjects ? userProjects.filter(p=> p.status === 'in-progress' || p.status
                                        === 'active').length : 0 %>
                                </h3>
                                <p class="text-muted mb-0">
                                    <%= lang==='ar' ? 'قيد التنفيذ' : 'In Progress' %>
                                </p>
                            </div>
                            <div class="stat-icon">
                                <i class="fas fa-spinner"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="stat-card">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h3 class="stat-number">
                                    <%= userProjects ? userProjects.filter(p=> p.status === 'completed').length : 0 %>
                                </h3>
                                <p class="text-muted mb-0">
                                    <%= lang==='ar' ? 'مكتملة' : 'Completed' %>
                                </p>
                            </div>
                            <div class="stat-icon">
                                <i class="fas fa-check-circle"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="stat-card">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h3 class="stat-number">
                                    <% let avgProgress=0; if (userProjects && userProjects.length> 0) {
                                        const totalProgress = userProjects.reduce((sum, p) => sum + (p.progress || 0),
                                        0);
                                        avgProgress = Math.round(totalProgress / userProjects.length);
                                        }
                                        %>
                                        <%= avgProgress %>%
                                </h3>
                                <p class="text-muted mb-0">
                                    <%= lang==='ar' ? 'متوسط الإنجاز' : 'Average Progress' %>
                                </p>
                            </div>
                            <div class="stat-icon">
                                <i class="fas fa-chart-line"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- قائمة المشاريع -->
            <div class="luxury-card">
                <div class="p-3 border-bottom d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 text-gold">
                        <i class="fas fa-list me-2"></i>
                        <%= lang==='ar' ? 'المشاريع المكلف بها' : 'Assigned Projects' %>
                    </h5>
                    <div class="d-flex gap-2">
                        <input type="text" class="form-control form-control-sm" placeholder="<%= t.search %>..."
                            style="width: 200px;">
                        <button class="btn btn-luxury btn-sm">
                            <i class="fas fa-search me-1"></i>
                            <%= t.search %>
                        </button>
                    </div>
                </div>
                <div class="p-3">
                    <% if (userProjects && userProjects.length> 0) { %>
                        <div class="table-responsive">
                            <table class="table table-luxury table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            <%= t.projectName %>
                                        </th>
                                        <th>
                                            <%= t.projectDescription %>
                                        </th>
                                        <th>
                                            <%= lang==='ar' ? 'الأولوية' : 'Priority' %>
                                        </th>
                                        <th>
                                            <%= t.kpiProgress %>
                                        </th>
                                        <th>
                                            <%= lang==='ar' ? 'الموعد النهائي' : 'Deadline' %>
                                        </th>
                                        <th>
                                            <%= t.status %>
                                        </th>
                                        <th>
                                            <%= lang==='ar' ? 'الإجراءات' : 'Actions' %>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% userProjects.forEach(project=> { %>
                                        <tr>
                                            <td>
                                                <strong>
                                                    <%= project.name[lang] || project.name.ar %>
                                                </strong>
                                            </td>
                                            <td>
                                                <%= project.description ? (project.description.substring(0, 50) +
                                                    (project.description.length> 50 ? '...' : '')) : '' %>
                                            </td>
                                            <td>
                                                <span
                                                    class="badge bg-<%= project.priority === 'high' ? 'danger' : project.priority === 'medium' ? 'warning' : 'info' %>">
                                                    <%= project.priority==='high' ? (lang==='ar' ? 'عالي' : 'High' ) :
                                                        project.priority==='medium' ? (lang==='ar' ? 'متوسط' : 'Medium'
                                                        ) : (lang==='ar' ? 'منخفض' : 'Low' ) %>
                                                </span>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="kpi-progress me-2" style="width: 100px;">
                                                        <div class="progress-bar"
                                                            style="width: <%= project.progress || 0 %>%;"></div>
                                                    </div>
                                                    <span>
                                                        <%= project.progress || 0 %>%
                                                    </span>
                                                </div>
                                            </td>
                                            <td>
                                                <%= project.deadline ? new
                                                    Date(project.deadline).toLocaleDateString(lang==='ar' ? 'ar-SA'
                                                    : 'en-US' ) : lang==='ar' ? 'غير محدد' : 'Not set' %>
                                            </td>
                                            <td>
                                                <span class="badge status-<%= project.status || 'pending' %>">
                                                    <%= project.status==='completed' ? t.completed :
                                                        project.status==='in-progress' ? t.inProgress : t.pending %>
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group-luxury">
                                                    <button class="btn btn-outline-luxury btn-sm">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    <button class="btn btn-outline-luxury btn-sm">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button class="btn btn-outline-luxury btn-sm">
                                                        <i class="fas fa-chart-line"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                        <% } else { %>
                            <div class="text-center py-5">
                                <i class="fas fa-tasks fa-3x text-muted mb-3"></i>
                                <h4 class="text-muted">
                                    <%= lang==='ar' ? 'لا توجد مشاريع مخصصة' : 'No projects assigned' %>
                                </h4>
                                <p class="text-muted mb-4">
                                    <%= lang==='ar' ? 'سيتم تعيين المشاريع الخاصة بك من قبل الإدارة قريباً'
                                        : 'Your projects will be assigned by management soon' %>
                                </p>
                                <button class="btn btn-luxury">
                                    <i class="fas fa-sync-alt me-2"></i>
                                    <%= lang==='ar' ? 'تحديث الصفحة' : 'Refresh Page' %>
                                </button>
                            </div>
                            <% } %>
                </div>
            </div>

            <!-- المشاريع القادمة وتوزيع المشاريع -->
            <div class="row mt-4">
                <div class="col-lg-6">
                    <div class="luxury-card h-100">
                        <div class="p-3 border-bottom">
                            <h5 class="mb-0 text-gold">
                                <i class="fas fa-calendar-alt me-2"></i>
                                <%= lang==='ar' ? 'المشاريع القادمة' : 'Upcoming Projects' %>
                            </h5>
                        </div>
                        <div class="p-3">
                            <div class="activity-list">
                                <% const upcomingProjects=userProjects ? userProjects.filter(p=> p.status === 'pending'
                                    || p.status === 'planned') : [];
                                    if (upcomingProjects.length > 0) {
                                    upcomingProjects.slice(0, 5).forEach(project => {
                                    %>
                                    <div class="activity-item">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <h6 class="mb-1">
                                                    <%= project.name[lang] || project.name.ar %>
                                                </h6>
                                                <small class="text-muted">
                                                    <%= lang==='ar' ? 'الموعد:' : 'Deadline:' %>
                                                        <%= project.deadline ? new
                                                            Date(project.deadline).toLocaleDateString(lang==='ar'
                                                            ? 'ar-SA' : 'en-US' ) : (lang==='ar' ? 'غير محدد'
                                                            : 'Not set' ) %>
                                                </small>
                                            </div>
                                            <span class="badge status-pending">
                                                <%= t.pending %>
                                            </span>
                                        </div>
                                    </div>
                                    <% }); } else { %>
                                        <div class="text-center py-4">
                                            <p class="text-muted mb-0">
                                                <%= lang==='ar' ? 'لا توجد مشاريع قادمة' : 'No upcoming projects' %>
                                            </p>
                                        </div>
                                        <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="luxury-card h-100">
                        <div class="p-3 border-bottom">
                            <h5 class="mb-0 text-gold">
                                <i class="fas fa-chart-pie me-2"></i>
                                <%= lang==='ar' ? 'توزيع المشاريع' : 'Projects Distribution' %>
                            </h5>
                        </div>
                        <div class="p-4 text-center">
                            <div class="mb-4">
                                <h2 class="text-gold">
                                    <%= userProjects ? userProjects.length : 0 %>
                                </h2>
                                <p class="text-muted">
                                    <%= lang==='ar' ? 'إجمالي المشاريع' : 'Total Projects' %>
                                </p>
                            </div>
                            <div class="row text-center">
                                <div class="col-4">
                                    <h5 class="text-gold">
                                        <%= userProjects ? userProjects.filter(p=> p.status === 'in-progress' ||
                                            p.status === 'active').length : 0 %>
                                    </h5>
                                    <small class="text-muted">
                                        <%= lang==='ar' ? 'نشطة' : 'Active' %>
                                    </small>
                                </div>
                                <div class="col-4">
                                    <h5 class="text-gold">
                                        <%= userProjects ? userProjects.filter(p=> p.status === 'completed').length : 0
                                            %>
                                    </h5>
                                    <small class="text-muted">
                                        <%= lang==='ar' ? 'مكتملة' : 'Completed' %>
                                    </small>
                                </div>
                                <div class="col-4">
                                    <h5 class="text-gold">
                                        <%= userProjects ? userProjects.filter(p=> p.status === 'pending').length : 0 %>
                                    </h5>
                                    <small class="text-muted">
                                        <%= lang==='ar' ? 'معلقة' : 'Pending' %>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // كود تبديل القائمة الجانبية
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('overlay');

        function toggleSidebar() {
            sidebar.classList.toggle('show');
            overlay.classList.toggle('show');
        }

        mobileMenuBtn.addEventListener('click', toggleSidebar);
        overlay.addEventListener('click', toggleSidebar);
    </script>
</body>

</html>